@page "/Checkout"

<h3>Falta implementar el Checkout y crear el servicio para la pasarela de pago (Payment Gateway)</h3>

<div class="row">
    <div class="input-group mb-3">
        <span class="input-group-text">Payment Description</span>
        <input type="text"
               class="form-control"
               placeholder="Payment Description"
               @bind="PaymentDescription">
    </div>
</div>

<div class="row">
    <div class="input-group mb-3">
        <span class="input-group-text">Payment Amount</span>
        <input type="text"
               class="form-control"
               placeholder="Payment Amount"
               @bind="PaymentAmount">
    </div>
</div>

<div class="row">
    <button
        type="button"
        class="btn btn-success"
            @onclick="() => Pay_Click()">
        Pay
    </button>
</div>

@if (ShoppingCartItems == null)
{
    <DisplaySpinner />
}
else
{
    <div class="col-md-6">
        <h4 class="mb-2">
            Payment Sumary
        </h4>

        @if (ShoppingCartItems.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ShoppingCartItems)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.ProductName</td>
                            <td>@item.TotalPrice.ToString("C")</td>
                        </tr>
                    }
                    <tr>
                        <td>
                            <b>Total</b>
                        </td>
                        <td>
                            <b>@PaymentAmount.ToString("C")</b>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <p>
                You currently have no items in your shopping cart
            </p>
        }
    </div>
}
